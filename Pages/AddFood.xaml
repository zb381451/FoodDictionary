<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDictionary.Pages.AddFood"
             Title="Add Food">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">


            <Label Text="Add Food"
                   FontSize="24"
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />

            <Label Text="Food Name" />
            <Entry x:Name="NameEntry" Placeholder="Enter food name" />

            <Label Text="Serving Size" />
            <Entry x:Name="ServingSizeEntry" Placeholder="e.g. 1 medium" />

            <Label Text="Price (optional)" />
            <Entry x:Name="PriceEntry" Keyboard="Numeric" Placeholder="e.g. 1.99" />

            <Button Text="Add Food" Clicked="OnAddFoodClicked" />

            <Label x:Name="StatusLabel" TextColor="Green" IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>