<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDictionary.Pages.AddFood"
             Title="Add Food">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- set title label color for visibility -->
            <Label Text="Add Food"
                   FontSize="24"
                   TextColor="Black"
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />

            <!-- set label and entry colors -->
            <Label Text="Food Name" TextColor="Black"/>
            <Entry x:Name="NameEntry" Placeholder="Enter food name" TextColor="Black"/>

            <Label Text="Serving Size" TextColor="Black"/>
            <Entry x:Name="ServingSizeEntry" Placeholder="e.g. 1 medium" TextColor="Black"/>

            <Label Text="Price (optional)" TextColor="Black"/>
            <Entry x:Name="PriceEntry" Keyboard="Numeric" Placeholder="e.g. 1.99" TextColor="Black"/>

            <Button Text="Add Food" Clicked="OnAddFoodClicked" />

            <Label x:Name="StatusLabel" TextColor="Green" IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
